{
  "name": "claude-ralph",
  "version": "1.0.0",
  "description": "Autonomous AI agent loop for Claude Code - Execute PRD user stories automatically",
  "type": "module",
  "bin": {
    "ralph": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "tsx scripts/embed-templates.ts",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "ai",
    "agent",
    "prd",
    "automation",
    "cli"
  ],
  "author": "Argile",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/argile-ai/claude-ralph-mode.git"
  },
  "homepage": "https://github.com/argile-ai/claude-ralph-mode#readme",
  "bugs": {
    "url": "https://github.com/argile-ai/claude-ralph-mode/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
